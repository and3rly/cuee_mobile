<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.cuee_mobile.adapter.LecturaAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:orientation="horizontal"
        android:transitionGroup="true">

        <ImageView
            android:id="@+id/imgBloqueado"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/bloquear" />

        <TextView
            android:id="@+id/lblInstalacion"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="123123"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblContador"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="123123"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblUsuario"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Marcos Perez"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblItinerario"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblLecRealizada"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Si"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblLecCorrecta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Si"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>